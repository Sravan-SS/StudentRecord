<%- include('../partials/header')%>
<div class="container">
  <h1 id="head" class="mb-4">Add New Student</h1>
  <div class="card bg-light border-dark">
    <div class="card-body">
      <form action="/grades/<%=grade._id%>/students" method="POST">
        <div class="row">
          <div class="col-md-6">
            <h4 class="card-title">Student Details:</h4>
          </div>
          <div class="col-md-6">
            <h6 class="ml-4 float-right">
              <div class="form-check form-check-inline">
                <input
                  class="form-check-input"
                  type="radio"
                  id="inlineCheckbox1"
                  value="Boy"
                  name="student[gender]"
                  required
                />
                <label class="form-check-label" for="inlineCheckbox1"
                  >Boy</label
                >
              </div>
              <div class="form-check form-check-inline">
                <input
                  class="form-check-input"
                  type="radio"
                  id="inlineCheckbox2"
                  value="Girl"
                  name="student[gender]"
                  required
                />
                <label class="form-check-label" for="inlineCheckbox2"
                  >Girl</label
                >
              </div>
            </h6>
          </div>
        </div>
        <hr class="my-3 pb-3" />

        <div class="form-row">
          <div class="form-group col-md-6 p-2">
            <input
              type="text"
              name="student[name]"
              class="form-control"
              placeholder="Name"
              required
            />
          </div>
          <div class="form-group col-md-6 p-2">
            <input
              type="number"
              name="student[adNo]"
              class="form-control"
              placeholder="Admission Number"
              required
            />
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-6 p-2">
            <input
              type="text"
              name="student[dateOfBirth]"
              class="form-control"
              placeholder="Date Of Birth"
              onfocus="(this.type='date')"
              onblur="(this.type='text')"
              min="2015-01-01"
              max="2020-12-01"
              required
            />
          </div>
          <div class="form-group col-md-6 p-2">
            <input
              type="number"
              name="student[phoneNo]"
              class="form-control"
              placeholder="Contact Number"
              required
            />
          </div>
        </div>
        <div class="form-row py-2">
          <div class="form-group col-md-6 p-2">
            <input
              type="number"
              name="student[adharNo]"
              class="form-control"
              placeholder="Aadhaar Card Number"
              required
            />
          </div>
          <div class="form-group col-md-6 p-2">
            <input
              type="text"
              name="student[dateOfAdmission]"
              class="form-control"
              placeholder="Date Of Admission"
              onfocus="(this.type='date')"
              onblur="(this.type='text')"
              min="2015-01-01"
              max="2020-12-01"
              required
            />
          </div>
        </div>
        <div class="form-row">
          <div class="col-md-6 p-2">
            <div class="card bg-light border-dark card-body">
              <h5 class="card-title">Father's Details:</h5>
              <div class="form-group">
                <input
                  type="text"
                  name="student[father.name]"
                  placeholder="Name"
                  class="form-control"
                  required
                />
              </div>
              <div class="form-group">
                <input
                  type="text"
                  name="student[father.occupation]"
                  placeholder="Occupation"
                  class="form-control"
                  required
                />
              </div>
              <div class="form-group">
                <input
                  type="number"
                  name="student[father.income]"
                  placeholder="Income"
                  class="form-control"
                  required
                />
              </div>
            </div>
          </div>
          <div class="col-md-6 p-2">
            <div class="card bg-light border-dark card-body">
              <h5 class="card-title">Mother's Details:</h5>
              <div class="form-group">
                <input
                  type="text"
                  name="student[mother.name]"
                  placeholder="Name"
                  class="form-control"
                  required
                />
              </div>
              <div class="form-group">
                <input
                  type="text"
                  name="student[mother.occupation]"
                  placeholder="Occupation"
                  class="form-control"
                  required
                />
              </div>
              <div class="form-group">
                <input
                  type="number"
                  name="student[mother.income]"
                  placeholder="Income"
                  class="form-control"
                  required
                />
              </div>
            </div>
          </div>
        </div>
        <div class="form-row">
          <div class="col-md-3 p-2">
            <div class="form-group">
              <input
                type="text"
                name="student[religion]"
                placeholder="Religion"
                class="form-control"
                required
              />
            </div>
          </div>
          <div class="col-md-3 p-2">
            <div class="form-group">
              <input
                type="text"
                name="student[caste]"
                placeholder="Caste"
                class="form-control"
                required
              />
            </div>
          </div>
          <div class="col-md-3 p-2">
            <div class="form-group">
              <select
                id="inputState"
                name="student[category]"
                class="form-control"
                required
              >
                <option value="" selected>Category</option>
                <option value="OBC">OBC</option>
                <option value="OEC">OEC</option>
                <option value="FC">FC</option>
                <option value="SC">SC</option>
                <option value="ST">ST</option>
              </select>
            </div>
          </div>
          <div class="col-md-3 p-2">
            <div class="form-group">
              <select
                id="inputState"
                name="student[bloodGroup]"
                class="form-control"
                required
              >
                <option value="" selected>Blood Group</option>
                <option value="A+ve">A +ve</option>
                <option value="A-ve">A +ve</option>
                <option value="B+ve">B +ve</option>
                <option value="B-ve">B -ve</option>
                <option value="O+ve">O +ve</option>
                <option value="O-ve">O -ve</option>
                <option value="AB+ve">AB +ve</option>
                <option value="AB-ve">AB -ve</option>
              </select>
            </div>
          </div>
        </div>
        <div class="form-row">
          <div class="col-md-6 p-2">
            <div class="card bg-light border-dark card-body">
              <h5 class="card-title">Address:</h5>
              <div class="form-group">
                <input
                  type="text"
                  name="student[address.streetAddress]"
                  placeholder="Street Address"
                  class="form-control"
                  required
                />
              </div>
              <div class="form-group">
                <input
                  type="text"
                  name="student[address.city]"
                  placeholder="City"
                  class="form-control"
                  required
                />
              </div>
              <div class="form-group">
                <input
                  type="number"
                  name="student[address.PIN]"
                  placeholder="PIN"
                  class="form-control"
                  required
                />
              </div>
            </div>
          </div>
          <div class="col-md-6 p-2">
            <div class="card bg-light border-dark card-body">
              <h5 class="card-title">Bank Details:</h5>
              <div class="form-group">
                <input
                  type="number"
                  name="student[bank.accNo]"
                  placeholder="Account Number"
                  class="form-control"
                  required
                />
              </div>
              <div class="form-group">
                <input
                  type="text"
                  name="student[bank.IFSC]"
                  placeholder="IFSC Code"
                  class="form-control"
                  required
                />
              </div>
            </div>
            <a
              class="btn btn-sm btn-outline-secondary btn-block mt-3"
              href="/grades/<%=grade._id%>"
              >Cancel</a
            >
          </div>
        </div>
        <input
          type="submit"
          class="form-group btn btn-primary btn-block"
          value="Save"
          id="bottomBtn"
        />
      </form>
    </div>
  </div>
</div>
<%- include('../partials/footer')%>
