<%- include ('../partials/header') %>

<div class="container">
  <h1 id="head">Create New Class</h1>
  <div id="form">
    <form action="/grades" method="POST">
      <div class="form-group">
        <input
          type="number"
          name="grade[std]"
          placeholder="Class"
          class="form-control"
          required
        />
      </div>
      <div class="form-group">
        <input
          type="text"
          name="grade[division]"
          placeholder="Division"
          class="form-control"
          required
        />
      </div>
      <div class="form-group">
        <input
          type="text"
          name="grade[year]"
          placeholder="Batch year"
          class="form-control"
          required
        />
      </div>
      <div class="form-group">
        <input
          type="submit"
          class="btn btn-lg btn-primary btn-block"
          value="Submit"
        />
      </div>
    </form>
    <a href="/grades">Go Back</a>
  </div>
</div>

<%- include ('../partials/footer') %>
